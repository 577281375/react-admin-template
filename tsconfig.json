{
  "compilerOptions": {
    "module": "es6",
    "target": "es2017",
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@": ["src/*"],
      "@assets": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@config/*": ["src/config/*"],
      "@icons/*": ["src/icons/*"],
      "@layouts/*": ["src/layouts/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
